{
  "extends": ["stylelint-config-standard", "stylelint-order"],
  "plugins": ["stylelint-order", "stylelint-group-selectors"],
  "rules": {
    "order/properties-order": [
      "position",
      "top",
      "right",
      "bottom",
      "left",
      "display",
      "flex-direction",
      "justify-content",
      "align-items",
      "width",
      "height",
      "margin",
      "padding",
      "border",
      "background",
      "color",
      "font-size",
      "font-family",
      "text-align",
      "z-index",
      "opacity",
      "transition",
      "filter",
      "box-shadow",
      "animation",
      "animation-delay"
    ],
    "order/properties-alphabetical-order": null,
    "stylelint-group-selectors/empty-line-between-groups": true
  }
}
